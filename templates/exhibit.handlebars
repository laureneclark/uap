<div id="curator">
	<div class = "page-header">
	    <h1> {{exhibit.title}} </h1>
	</div>
	<div class="error">
	    {{#if error}}
	      {{error}}
	    {{/if}}
	</div>
	{{#if madeByUser}} 
	<!-- Form for creating adding a Resource -->
  	<button class="btn btn-lg" data-toggle="modal" data-target="#add-resource-modal" id="add-resource-modal-btn"> Add Resource </button>
  	<!-- Modal -->
  	<div class="modal fade" id="add-resource-modal" tabindex="-1" role="dialog" aria-labelledby="add-resource-modal-label" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content"> 
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">
            <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
          </button>
          <h3 class="modal-title" id="add-resource-modal-label">Create an Exhibit</h3>
        </div>
        <div class="modal-body">
            <div class="form-error">
              {{#if form-error}}
                {{form-error}}
              {{/if}}
            </div>
	 	<form id="add-resource-form" class="form-inline">
	     	<div class="form-group">
	 	    	<label for="add-resource-name"> Name </label>
				<input type="text" name="name" id ="add-resource-name" class="form-control" placeholder="Resource Name" required />
			</div>

			<div class="form group">
				<label for="add-resource-link"> Start Date </label>
				<input type="text" name="link" id="add-resource-link" class="form-control" required>
	      	</div>

			<div class="form group">
				<label for="add-resource-highlight"> Highlight </label>
				<input type="text" name="highlight" id="add-resource-highlight" class="form-control" required>
	      	</div>

	     	<div class="form-group">
	 	    	<label for="add-resource-description"> Description </label> 
				<input type="text" name="description" id ="add-resource-description" class="form-control" placeholder="Resource Description" required />
			</div>
  		</form>
	</div>
        <div class="modal-footer">
        <button type="button" class="btn" data-dismiss="modal">Close</button>
          <button type="button" class="btn edit-btn" id="add-resource-btn">Add</button>
        </div>
      </div>
    </div>
  </div>
<!-- Form for creating adding an Influence -->
  	<button class="btn btn-lg" data-toggle="modal" data-target="#add-influence-modal" id="add-influence-modal-btn"> Add Influence </button>
  	<!-- Modal -->
  	<div class="modal fade" id="add-influence-modal" tabindex="-1" role="dialog" aria-labelledby="new-exhibit-modal-label" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content"> 
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">
            <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
          </button>
          <h3 class="modal-title" id="add-influence-modal-label">Create an Exhibit</h3>
        </div>
        <div class="modal-body">
            <div class="form-error">
              {{#if form-error}}
                {{form-error}}
              {{/if}}
            </div>
	 	<form id="add-influence-form" class="form-inline">
	     	<div class="form-group">
	 	    	<label for="add-influence-name"> Name </label>
				<input type="text" name="name" id ="add-influence-name" class="form-control" placeholder="Resource Name" required />
			</div>

			<div class="form group">
				<label for="add-influence-image"> Representative Image </label>
				<input type="text" name="image" id="add-influence-image" class="form-control" required>
	      	</div>

			<div class="form group">
				<label for="add-influence-artist"> Highlight </label>
				<input type="text" name="artist" id="add-influence-artist" class="form-control" required>
	      	</div>

	     	<div class="form-group">
	 	    	<label for="add-influence-description"> Description </label> 
				<input type="text" name="description" id ="add-influence-description" class="form-control" placeholder="Description of Influence Impact" required />
			</div>
  		</form>
	</div>
        <div class="modal-footer">
        <button type="button" class="btn" data-dismiss="modal">Close</button>
          <button type="button" class="btn edit-btn" id="add-influence-btn">Add</button>
        </div>
      </div>
    </div>
  </div>
<!-- Form for adding a Piece -->
  	<button class="btn btn-lg" data-toggle="modal" data-target="#add-piece-modal" id="add-piece-modal-btn"> Add Piece </button>
  	<!-- Modal -->
  	<div class="modal fade" id="add-piece-modal" tabindex="-1" role="dialog" aria-labelledby="add-piece-modal-label" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content"> 
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">
            <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
          </button>
          <h3 class="modal-title" id="add-piece-modal-label">Add a Piece</h3>
        </div>
        <div class="modal-body">
            <div class="form-error">
              {{#if form-error}}
                {{form-error}}
              {{/if}}
            </div>
	 	<form id="add-piece-form" class="form-inline">
	     	<div class="form-group">
	 	    	<label for="add-piece-title"> Title </label>
				<input type="text" name="title" id ="add-piece-title" class="form-control" placeholder="RPiece Title" required />
			</div>

			<div class="form group">
				<label for="add-piece-year"> Year </label>
				<input type="text" name="year" id="add-piece-year" class="form-control" required>
	      	</div>

			<div class="form group">
				<label for="add-piece-artist"> Atrist </label>
				<input type="text" name="artist" id="add-piece-artist" class="form-control" required>
	      	</div>

	     	<div class="form-group">
	 	    	<label for="add-piece-description"> Description </label> 
				<input type="text" name="description" id ="add-piece-description" class="form-control" placeholder="Piece Description" required />
			</div>
	     	<div class="form-group">
	 	    	<label for="add-piece-image"> Image </label> 
				<input type="text" name="description" id ="add-piece-image" class="form-control" placeholder="Image Link" required />
			</div>
  		</form>
	</div>
        <div class="modal-footer">
        <button type="button" class="btn" data-dismiss="modal">Close</button>
          <button type="button" class="btn edit-btn" id="add-piece-btn">Add</button>
        </div>
      </div>
    </div>
  </div>
		<button class="btn publish" id={{_id}}> Publish </button>
	{{/if}}

	<div class="exhibit-info">
		<h2> {{exhibit.description}}</h2>
		<h2> Start Date: {{exhibit.dateStart}} </h2>
		<h2> End Date: {{exhibit.dateEnd}} </h2>
		<h2> Location: {{exhibit.location}} </h2>
	</div>

	<div class="resources">
		<h2> Resources </h2>
		<h3> Use these resources to prepare for your visit to the exhibit </h3>
		{{#each exhibit.resources}}
			{{>resource-panel}}
		{{/each}}
	</div>

	<div class="influences">
		<h2> Influences </h2>
		<h3> This exhibit drew inspiration from the following sources </h3>
		{{#each exhibit.influences}}
			{{>influence-panel}}
		{{/each}}
	</div>

	<div class="pieces">
		<h2> Pieces </h2>
		{{#each exhibit.pieces}}
			{{>piece-preview}}
		{{/each}}
	</div>